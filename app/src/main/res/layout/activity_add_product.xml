<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".AddProductActivity"
    android:paddingStart="@dimen/_15sdp"
    android:paddingEnd="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bu_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:background="@drawable/background_button_orange"
            android:padding="@dimen/_5sdp"
            android:backgroundTint="#F8F8FB"
            app:tint="@color/my_orange"
            android:elevation="@dimen/_4sdp"
            android:translationZ="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_35sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add new item"
            android:textSize="@dimen/_15ssp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What kind of item would you like to add ?"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="start"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="center">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service"
                    android:buttonTint="@color/black"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/_10sdp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"
                    android:layout_marginStart="@dimen/_10sdp"/>
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_bu_scanner"
            android:backgroundTint="#F2F2F5"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black"
            android:hint=""
            android:textColorHint="#9E000000"
            android:layout_marginBottom="@dimen/_20sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_bu_scanner"
            android:backgroundTint="#F2F2F5"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black"
            android:hint="Title or name the product"
            android:textColorHint="#9E000000"
            android:layout_marginBottom="@dimen/_20sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/background_bu_scanner"
            android:backgroundTint="#F2F2F5"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp"
            android:hint="Discribe your product"
            android:gravity="start"
            android:textColorHint="#9E000000"
            android:layout_marginBottom="@dimen/_20sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_bu_scanner"
            android:backgroundTint="#F2F2F5"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp"
            android:hint="Enter amount"
            android:textColorHint="#9E000000"
            android:inputType="number"
            android:layout_marginBottom="@dimen/_20sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:gravity="center"
                android:textColor="#B4000000"
                android:textSize="@dimen/_15sdp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add item"
                android:gravity="center"
                android:background="@drawable/background_bu_scanner"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:backgroundTint="@color/my_orange"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>